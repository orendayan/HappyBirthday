<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_pelican_popup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/main_bd_text_size"
        android:layout_marginStart="@dimen/main_bd_title1_start"
        android:layout_marginEnd="@dimen/main_bd_title1_end"
        android:gravity="center_horizontal|bottom"
        android:text="Today christianna Ronaldo is"
        android:textAllCaps="true"
        android:maxLines="2"
        android:textColor="@color/colorPrimaryDark"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_close"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:gravity="center_horizontal"
        android:id="@+id/bd_layout_detail">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_swirls"
            android:layout_gravity="center_vertical"
            android:paddingEnd="25dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a5"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_swirls"
            android:layout_gravity="center_vertical"
            android:paddingStart="25dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title2"
        android:layout_below="@id/bd_layout_detail"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/main_bd_text_size"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/main_bd_title1_start"
        android:layout_marginEnd="@dimen/main_bd_title1_end"
        android:gravity="center_horizontal"
        android:text="Months Old!"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_share"
        android:layout_below="@+id/tv_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Share the news"
        android:textColor="@color/colorAccent"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:drawableEnd="@drawable/ic_share_pink"
        android:paddingEnd="10dp"
        android:id="@+id/button" />


</RelativeLayout>